<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">

    <include
        android:id="@+id/toolbar_MainActivity"
        layout="@layout/toolbar" />

    <TextView
        android:id="@+id/titleNewsletter_TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/newsletter_TextView"
        android:paddingLeft="20dp"
        android:text="Newsletter"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/newsletter_TextView"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:background="@drawable/border_style"
        android:padding="10dp"
        android:text="
#-------newsletter--newsletter--newsletter----------------------\n
#-------newsletter--newsletter--newsletter----------------------\n
#-------newsletter--newsletter--newsletter----------------------\n
#-------newsletter--newsletter--newsletter----------------------\n
#-------newsletter--newsletter--newsletter----------------------\n
#-------newsletter--newsletter--newsletter----------------------\n
#-------newsletter--newsletter--newsletter----------------------\n
#-------newsletter--newsletter--newsletter----------------------\n
#-------newsletter--newsletter--newsletter----------------------\n
#-------newsletter--newsletter--newsletter----------------------\n
#-------newsletter--newsletter--newsletter----------------------\n
#-------newsletter--newsletter--newsletter----------------------\n
#-------newsletter--newsletter--newsletter----------------------\n
#-------newsletter--newsletter--newsletter----------------------\n
#-------newsletter--newsletter--newsletter----------------------\n
#-------newsletter--newsletter--newsletter----------------------\n
#-------newsletter--newsletter--newsletter----------------------\n
#-------newsletter--newsletter--newsletter----------------------\n"
        android:layout_above="@+id/toDo_textView"/>
    <TextView
        android:id="@+id/toDo_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:textSize="25dp"
        android:layout_above="@id/promo_ListView"
        android:layout_centerHorizontal="true"
        android:text="Tasks to perform" />



    <ListView
        android:id="@+id/promo_ListView"
        android:layout_width="match_parent"
        android:layout_height="184dp"
        android:layout_above="@+id/Horizontal_ScrollView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="10dp"
        android:paddingTop="10dp"
        android:background="@drawable/border_style"/>

    <HorizontalScrollView
        android:id="@+id/Horizontal_ScrollView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="22dp"
        android:layout_centerHorizontal="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/tasks_Button"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_weight="1"
                android:text="Tasks" />

            <Button
                android:id="@+id/signingAClock_Button"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Signing a clock" />

            <Button
                android:id="@+id/communication_Button"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="communication" />

            <Button
                android:id="@+id/addNewUser_Button"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Add new user" />
            <Button
                android:id="@+id/addNewTask_Button"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="Add new task"/>

            <Button
                android:id="@+id/exit_Button"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="exit" />


        </LinearLayout>
    </HorizontalScrollView>


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">


    <TableLayout
        android:id="@+id/tableButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_centerInParent="true">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/tasks_Button"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:layout_alignParentBottom="true"
                android:layout_weight="1"
                android:text="Tasks" />

            <Button
                android:id="@+id/signingAClock_Button"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:text="Signing a clock" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/communication_Button"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:text="communication" />

            <Button
                android:id="@+id/addNewUser_Button"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:text="Add new user" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/addNewTask_Button"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:text="Add new task" />

            <Button
                android:id="@+id/exit_Button"
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:text="exit" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </TableLayout>


</RelativeLayout>